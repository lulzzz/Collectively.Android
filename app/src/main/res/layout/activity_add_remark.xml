<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <android.support.design.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <android.support.design.widget.AppBarLayout
            android:id="@+id/app_bar_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fitsSystemWindows="true"
            android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">

            <android.support.design.widget.CollapsingToolbarLayout
                android:id="@+id/collapsing_toolbar"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fitsSystemWindows="true"
                app:contentScrim="?attr/colorPrimary"
                app:expandedTitleMarginEnd="64dp"
                app:expandedTitleMarginStart="48dp"
                app:layout_scrollFlags="scroll|exitUntilCollapsed">


                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_collapseMode="parallax">

                    <android.support.v7.widget.AppCompatImageView
                        android:id="@+id/remarkImage"
                        android:layout_width="match_parent"
                        android:layout_height="230dp"
                        android:fitsSystemWindows="true"
                        android:scaleType="centerCrop"/>

                    <LinearLayout
                        android:id="@+id/tapToZoomView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:visibility="gone">

                        <android.support.v7.widget.AppCompatImageView
                            android:layout_width="32dp"
                            android:layout_height="32dp"
                            android:layout_gravity="center"
                            app:srcCompat="@drawable/ic_tap_to_zoom_white_24dp"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:fontFamily="@string/font_light"
                            android:text="@string/tap_to_zoom"
                            android:textColor="#FFFFFFFF"
                            android:textSize="20sp"/>


                    </LinearLayout>


                </FrameLayout>

                <android.support.v7.widget.Toolbar
                    android:id="@+id/toolbar"
                    android:layout_width="match_parent"
                    android:layout_height="?attr/actionBarSize"
                    app:layout_collapseMode="pin"
                    app:popupTheme="@style/ThemeOverlay.AppCompat.Light">


                </android.support.v7.widget.Toolbar>

                <RelativeLayout
                    android:id="@+id/addressSectionContainer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:background="@color/black_light_transparent"
                    android:padding="4dp"
                    app:layout_collapseMode="parallax">

                    <android.support.v7.widget.AppCompatImageView
                        android:id="@+id/editLocationImage"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        app:srcCompat="@drawable/ic_edit_black_24dp"/>

                    <TextView
                        android:id="@+id/address"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_toRightOf="@id/editLocationImage"
                        android:fontFamily="@string/font_condensed"
                        android:gravity="left"
                        android:padding="2dp"
                        android:textColor="@color/font_light"
                        android:textSize="@dimen/font_medium">
                    </TextView>
                </RelativeLayout>

            </android.support.design.widget.CollapsingToolbarLayout>

        </android.support.design.widget.AppBarLayout>

        <android.support.v4.widget.NestedScrollView
            android:id="@+id/scroll"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:clipToPadding="false"
            android:paddingBottom="10dp"
            app:layout_behavior="@string/appbar_scrolling_view_behavior">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:padding="@dimen/spacing_normal">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/spacing_small"
                    android:fontFamily="@string/font_normal"
                    android:text="@string/add_remark_category_hint"
                    android:textColor="@color/red_dark_2"
                    android:textSize="@dimen/font_normal"/>

                <com.wefika.flowlayout.FlowLayout
                    android:id="@+id/remarkCategoriesLayout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="start|top"/>

                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/spacing_normal">

                    <EditText
                        android:id="@+id/description"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@string/font_light"
                        android:gravity="top|left"
                        android:hint="@string/description_hint"
                        android:inputType="textMultiLine"
                        android:lineSpacingMultiplier="1.25"
                        android:lines="3"
                        android:maxLength="200"
                        android:maxLines="3"
                        android:textSize="@dimen/font_normal"/>

                </android.support.design.widget.TextInputLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="3dp"
                    android:layout_marginRight="3dp"
                    android:layout_marginTop="@dimen/spacing_normal"
                    android:orientation="vertical">

                    <com.libaml.android.view.chip.ChipLayout
                        android:id="@+id/chipText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:chipDrawable_="@drawable/round_corner_drawable"
                        app:chipLayoutDrawable_="@drawable/edittext_theme_landing_page"
                        app:chipPadding_="4dp"
                        app:chipTextPadding_="2dp"
                        app:deleteIcon_="@android:drawable/presence_offline"
                        app:hintColor_="#A0A0A0"
                        app:hint_="@string/add_remark_tags_hint"
                        app:labelPosition_="left"
                        app:textColor_="#99000000"
                        app:textSize_="6sp">
                    </com.libaml.android.view.chip.ChipLayout>
                </LinearLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:paddingTop="12dp"
                    android:id="@+id/availableTagsButton"
                    android:layout_height="wrap_content">

                    <android.support.v7.widget.AppCompatImageView
                        android:id="@+id/available_tags_icon"
                        android:layout_width="14dp"
                        app:srcCompat="@drawable/ic_info_dark_24dp"
                        android:layout_height="14dp"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentTop="true"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="16dp"
                        android:fontFamily="@string/font_normal"
                        android:layout_toLeftOf="@id/available_tags_icon"
                        android:gravity="center_vertical|right"
                        android:text="@string/available_tags"
                        android:layout_centerVertical="true"
                        android:textColor="@color/red_dark_2"
                        android:textSize="@dimen/font_normal"
                        android:textStyle="bold"/>

                </RelativeLayout>


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/spacing_small"
                    android:layout_marginTop="@dimen/spacing_small"
                    android:fontFamily="@string/font_normal"
                    android:text="@string/add_remark_tags_hint"
                    android:textColor="@color/red_dark_2"
                    android:textSize="@dimen/font_normal"
                    android:visibility="gone"/>

                <com.wefika.flowlayout.FlowLayout
                    android:id="@+id/tags_layout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="start|top"
                    android:visibility="gone"/>


                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/spacing_small">

                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/submitButton"
                            android:layout_width="match_parent"
                            android:layout_height="48dp"
                            android:background="@drawable/button_selected_light"
                            android:fontFamily="@string/font_normal"
                            android:gravity="center"
                            android:paddingBottom="8dp"
                            android:paddingLeft="16dp"
                            android:paddingRight="16dp"
                            android:paddingTop="8dp"
                            android:text="@string/submit"
                            android:textColor="@color/white"
                            android:textSize="@dimen/font_medium"
                            android:textStyle="bold"/>

                        <com.pnikosis.materialishprogress.ProgressWheel
                            xmlns:wheel="http://schemas.android.com/apk/res-auto"
                            android:id="@+id/submitProgress"
                            android:layout_width="40dp"
                            android:layout_height="match_parent"
                            android:layout_marginTop="10dp"
                            android:visibility="gone"
                            wheel:matProg_barColor="@color/white"
                            wheel:matProg_circleRadius="24dp"
                            wheel:matProg_progressIndeterminate="true"
                            wheel:matProg_spinSpeed="1"/>

                    </FrameLayout>
                </android.support.v7.widget.CardView>

            </LinearLayout>

        </android.support.v4.widget.NestedScrollView>

        <android.support.design.widget.FloatingActionButton
            android:id="@+id/fab"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/spacing_medium"
            android:background="@color/red_dark_2"
            app:layout_anchor="@id/app_bar_layout"
            app:layout_anchorGravity="bottom|right|end"
            app:srcCompat="@drawable/ic_photo_camera_white_24dp"/>

    </android.support.design.widget.CoordinatorLayout>

    <FrameLayout
        android:id="@+id/expandedRemarkImageContainer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/background_light"
        android:visibility="invisible">

        <android.support.v7.widget.AppCompatImageView
            android:id="@+id/expandedRemarkImage"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="invisible"/>
    </FrameLayout>
</FrameLayout>
