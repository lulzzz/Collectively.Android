<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_margin="@dimen/spacing_large"
              android:orientation="vertical">

    <LinearLayout
        android:layout_margin="@dimen/spacing_large"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:background="#fff"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@color/red_dark_2"
            android:fontFamily="@string/font_condensed"
            android:gravity="center"
            android:text="@string/filter_remarks_dialog_title"
            android:textAllCaps="true"
            android:padding="@dimen/spacing_small"
            android:textStyle="bold"
            android:textColor="@color/font_light"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:fontFamily="@string/font_condensed"
            android:gravity="left"
            android:text="@string/filter_remarks_dialog_categories_label"
            android:textAllCaps="true"
            android:padding="@dimen/spacing_small"
            android:textStyle="bold"
            android:textColor="@color/font_dark_hint"/>

        <LinearLayout
            android:id="@+id/categoriesLayout"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        </LinearLayout>

        <TextView
            android:layout_marginTop="@dimen/spacing_small"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:fontFamily="@string/font_condensed"
            android:gravity="left"
            android:text="@string/filter_remarks_dialog_other_label"
            android:textAllCaps="true"
            android:padding="@dimen/spacing_small"
            android:textStyle="bold"
            android:textColor="@color/font_dark_hint"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:padding="@dimen/spacing_small">

                <TextView
                    android:id="@+id/resolvedFilterButton"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginRight="@dimen/spacing_small"
                    android:layout_weight="0.5"
                    android:background="@drawable/button_unselected"
                    android:fontFamily="@string/font_condensed"
                    android:gravity="center"
                    android:padding="@dimen/spacing_small"
                    android:text="@string/resolved_filter"
                    android:textColor="@color/white"
                    android:textSize="@dimen/font_normal" />

                <TextView
                    android:id="@+id/unresolvedFilterButton"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_weight="0.5"
                    android:fontFamily="@string/font_condensed"
                    android:gravity="center"
                    android:padding="@dimen/spacing_small"
                    android:text="@string/unresolved_filter"
                    android:textColor="@color/font_dark_hint"
                    android:textSize="@dimen/font_normal" />

            </LinearLayout>

    </LinearLayout>

</LinearLayout>
