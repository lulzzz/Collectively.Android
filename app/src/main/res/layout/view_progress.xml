<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/switcherProgress"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:gravity="center"
    android:orientation="vertical"
    android:visibility="invisible">

    <com.pnikosis.materialishprogress.ProgressWheel xmlns:wheel="http://schemas.android.com/apk/res-auto"
        android:layout_gravity="center"
        android:layout_width="40dp"
        android:layout_height="40dp"
        wheel:matProg_barColor="@color/red_dark_2"
        wheel:matProg_circleRadius="30dp"
        wheel:matProg_progressIndeterminate="true"
        wheel:matProg_spinSpeed="1" />
</LinearLayout>